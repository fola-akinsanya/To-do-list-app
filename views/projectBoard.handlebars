<body>


  <!-- project board with individual tasks -->
  <header>
    <h1>Project Tasks</h1>
  </header>
  <div class="container page-container">


    <div class="col sub-wrapper">
      <h2>To do</h2>
      <div class="sub-container" id='0'>
        <a href="/projects/{{projectID}}/create-task"><i class="far fa-plus-square"></i></a>


        {{#each col0Task}}
        <div class="card" draggable="true" id={{this.id}}>
          <div class="card-body">
            <h2 class="card-title">{{this.title}}</h2>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.UserId}}</p>
            <div class="links">
              <a class="card-link" href="/{{this.id}}/edit"><i class="fas fa-edit"></i></a>
              <a class="card-link" href="/{{this.id}}/delete"><i class="fas fa-trash-alt"></i></a>
            </div>
          </div>
        </div>
        {{/each}}



      </div>
    </div>


    <div class="col sub-wrapper">
      <h2>In progress</h2>
      <div class="sub-container" id='1'>
        {{#each col1Task}}
        <div class="card" draggable="true" id={{this.id}}>
          <div class="card-body">
            <h2 class="card-title">{{this.title}}</h2>
            <p class="card-text">{{this.description}}</p>
            <div class="links">
              <a class="card-link" href="/{{this.id}}/edit"><i class="fas fa-edit"></i></a>
              <a class="card-link" href="/{{this.id}}/delete"><i class="fas fa-trash-alt"></i></a>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>

    <div class="col sub-wrapper">
      <h2>Complete</h2>
      <div class="sub-container" id='2'>
        {{#each col2Task}}
        <div class="card" draggable="true" id={{this.id}}>
          <div class="card-body">
            <h2 class="card-title">{{this.title}}</h2>
            <p class="card-text">{{this.description}}</p>
            <div class="links">
              <a class="card-link" href="/{{this.id}}/edit"><i class="fas fa-edit"></i></a>
              <a class="card-link" href="/{{this.id}}/delete"><i class="fas fa-trash-alt"></i></a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>

  </div>

