  <link rel="stylesheet" href="/style.css">

  <title>todo project</title>
</head>

<body>


  <!-- project board with individual tasks -->

  <h1>Project Tasks</h1>
  <div class="container">
    <div class="row row-cols-3">
      <div class="col">
        <h2>To do</h2>
        <a href="/projects/{{projectID}}/create-task">Add Task</a>
        <div class="sub-container" id='0'>
          {{#each tasks}}
          <div class="card" style="width: 18rem;" draggable="true" id={{this.id}}>
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a class="card-link" href="/{{this.id}}/edit">Edit</a>
              <a class="card-link" href ="/{{this.id}}/delete">Delete</a>
            </div>
          </div>
        {{/each}}
        </div>
      </div>


      <div class="col">
        <h2>In progress</h2>
        <div class="sub-container" id='1'>

        </div>
      </div>

      <div class="col">
        <h2>Complete</h2>
        <div class="sub-container" id='2'>

        </div>
      </div>

    </div>
  </div>

